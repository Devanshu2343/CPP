#include <iostream>
#include<stdlib.h>
using namespace std ;
int main ()
{

    int *p1= new int ;
    if(p1 ==NULL)
    {
        cout<<"memory allocation failure ";
        exit (1);
    }
    else
    {
        *p1=20;
        cout<<"the value of p1 is :: " <<*p1;
       delete p1 ;

    }
    return 0 ;
}
